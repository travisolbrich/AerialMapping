<Window x:Class="AerialMapping.AddLocation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Location" Height="110" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="New Location:" Margin="10, 10, 0, 0"/>
        <TextBox x:Name="NewLocation" Width="170" Margin="100, 10, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Add" Click="BAddLocation_Click" Margin="0, 40, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="50"/>
    </Grid>
</Window>
